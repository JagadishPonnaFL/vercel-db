{
    "version": 2,
    "builds": [
      {
        "src": "api/server.js",  
        "use": "@vercel/node"
      }
    ],
    "routes": [
      {
        "src": "/(.*)",  
        "dest": "/api/server.js"
      }
    ],
    "headers": [
      {
        "source": "/(.*)",
        "headers": [
          {
            "key": "Content-Security-Policy",
            "value": "default-src 'none'; script-src 'self' https://vercel.live; style-src 'self'; connect-src 'self';"
          }
        ]
      }
    ]
  }
  